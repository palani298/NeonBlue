# Application Settings
APP_NAME="Experimentation Platform"
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BEARER_TOKENS=["test-token-1", "test-token-2"]

# Database
DATABASE_URL=postgresql+asyncpg://experiments:password@localhost:5432/experiments
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=experiments
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=experiments

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# API Timing Middleware
ENABLE_TIMING_MIDDLEWARE=true
SLOW_API_THRESHOLD_MS=1000

# Assignment Configuration
ASSIGNMENT_HASH_SEED=unique-seed-for-your-deployment
ASSIGNMENT_BUCKET_SIZE=10000
ASSIGNMENT_CACHE_TTL=604800

# Transactional Outbox
OUTBOX_ENABLED=true
OUTBOX_BATCH_SIZE=100
OUTBOX_POLL_INTERVAL=5

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Monitoring
PROMETHEUS_ENABLED=true
OPENTELEMETRY_ENABLED=false